<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Определите ваш шрифт -->
        <item name="android:fontFamily">@font/gilroy_medium</item>
    </style>

    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="modifiedEditText" parent="parent">
        <item name="android:textSize">@dimen/newsMoreTextSize</item>
        <item name="android:backgroundTint">@color/primaryTextColor</item>
    </style>

    <!-- Стиль для начальной подсказки (большой размер) -->
    <style name="HintTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/hintColorText</item>
    </style>

    <!-- Стиль для плавающей подсказки (меньший размер) -->
    <style name="FloatingHintTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item> <!-- Размер текста для плавающей подсказки -->
        <item name="android:textColor">@color/hintColorText</item>
    </style>
    <!-- Стиль для кнопки (меньший размер) -->
    <style name="AppTheme.RoundedCornerMaterialButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/btn_background</item>
    </style>

    <style name="CounterText" parent="TextAppearance.Design.Counter">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/button_not_clicked</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/background_chip</item>
        <item name="chipCornerRadius">16dp</item> <!-- Радиус углов -->
        <item name="chipStrokeColor">@color/background_chip</item>
        <item name="android:closeIcon">@drawable/close_icon_color</item>
        <item name="android:textSize">14sp</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="closeIconEnabled">true</item>
        <item name="closeIconTint">@color/black</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Custom style for BottomNavigationView items -->
    <style name="CustomBottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/BottomNavigationActiveTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationInactiveTextAppearance</item>
    </style>

    <!-- Custom style for active text appearance -->
    <style name="BottomNavigationActiveTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item> <!-- Change the size as needed -->
        <item name="android:fontFamily">@font/gilroy_medium</item>
    </style>

    <!-- Custom style for inactive text appearance -->
    <style name="BottomNavigationInactiveTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item> <!-- Change the size as needed -->
        <item name="android:fontFamily">@font/gilroy_medium</item>
    </style>
</resources>
